<?xml version="1.0" encoding="utf-8" ?>
<extension 
	type="module"
	version="2.5"
	client="site"
	method="upgrade">
	<name>[JA Voice] Workflow List</name>
	<author>Joom Solutions</author>
	<creationDate>29 May 2013</creationDate>
	<copyright>Copyright (C), J.O.O.M Solutions Co., Ltd. All Rights Reserved.</copyright>
	<license>license GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<authorEmail>webmaster@joomlart.com</authorEmail>
	<authorUrl>joomlart.com</authorUrl>
	<version>1.1.0</version>
	<description>Workflow List for the JA Voice Enterprise Extension</description>
	<languages>
			<language tag="en-GB">en-GB.mod_javwork_flow.ini</language>
	</languages>
	<files>
	    <filename module="mod_javwork_flow">mod_javwork_flow.php</filename>	
		<folder>asset</folder>
		<folder>tmpl</folder>
		<filename>index.html</filename>
	</files>
	
	<config>
		<fields 
			name="params">
			  <fieldset name="basic">
		       
				<field name="moduleclass_sfx" type="text" default="" label="MODULE_CLASS_SUFFIX" />
				<field 
					name="javthemes" 
					type="folderlist" 
					directory="modules/mod_javwork_flow/asset/themes/" 
					default="workflow" 
					label="DEFAULT_THEME" 
					description="DEFAULT_THEME_DESC" />
			
			  </fieldset>		
	</fields>
	</config>
</extension>
